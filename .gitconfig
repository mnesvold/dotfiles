[push]
    default = simple
[alias]
    gr = log --decorate --pretty=oneline --abbrev-commit --graph -n 15
    st = status -sb --untracked-files=all

    # cf. https://github.com/so-fancy/diff-so-fancy
    dsf = "!git diff --color \"$@\" | diff-so-fancy | less --tabs=4 -RFX"
[core]
    editor = vi
[rebase]
    autosquash = true
